{
  "manifest_version": 2,
  "name": "Tab Volume Control",
  "version": "1.0",
  "description": "Adjust the volume of individual tabs from 0% to 500%",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "Tab Volume Control",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "module-loader.js",
      "content.js",
      "site-handlers/standard-handler.js",
      "site-handlers/youtube-handler.js",
      "site-handlers/9gag-handler.js"
    ],
    "run_at": "document_start"
  }],
  "web_accessible_resources": [
    "site-handlers/*.js"
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}